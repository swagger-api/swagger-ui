@Library('pipelib@master') _

def THREADFIX_ID = env.THREADFIX_ID ? env.THREADFIX_ID : '115'

node {
// ('sl61')
  def nodejs = tool 'NodeJS_6'
  def root = pwd()

  stage('Setup') {
    git([
      url: env.GIT_URL ? env.GIT_URL : 'https://github.com/venicegeo/pz-swagger',
      branch: "master"
    ])
  }

  stage('Archive') {
    sh './ci/archive.sh'
    sh """
      tar -czf pz-swagger.tar.gz dist
    """
    mavenPush()
  }

  stage('Initial Scans') {
    dependencyCheck {
      threadfixId = THREADFIX_ID
    }
    sonar()
  }

  stage ('CI Deploy') {
    cfPush()
    zap {
      threadfixId = THREADFIX_ID
    }
    cfBgDeploy()
  }

  stage ('Integration Testing') {
    postman()
  }

  stage('Reset') {
    git([
      url: env.GIT_URL ? env.GIT_URL : 'https://github.com/venicegeo/pz-swagger',
      branch: "master"
    ])
  }

  stage('Staging Deploy') {
    cfPush {
      cfDomain  = 'stage.geointservices.io'
      cfSpace   = 'stage'
    }
    cfBgDeploy {
      cfDomain  = 'stage.geointservices.io'
      cfSpace   = 'stage'
    }
  }

  stage ('Stage: Integration Testing') {
    postman {
      cfSpace = 'stage'
    }
  }

  stage('Reset') {
    git([
      url: env.GIT_URL ? env.GIT_URL : 'https://github.com/venicegeo/pz-swagger',
      branch: "master"
    ])
  }

  stage('Final Scans') {
    fortify {
      threadfixId = THREADFIX_ID
    }
  }

  stage ('Cleanup') {
    deleteDir()
  }
}
