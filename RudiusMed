      "get": {
        "summary": "Get genetic report",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "patient_id", "in": "query", "required": true, "schema": { "type": "string" } },
          { "name": "date_range", "in": "query", "schema": { "type": "string" } }
